<% title "Car" %>

<p>
  <strong>Brand:</strong>
  <%=h @car.brand %>
</p>
<p>
  <strong>Name:</strong>
  <%=h @car.name %>
</p>

<h3>Speed:</h3>
<p>
  Global Avg: <%= ratings_for @car, :dimension => :speed %>
</p>
Your rating: <%= ratings_for @car, :force_static => true, :dimension => :speed, :size => 'small', :show_user_rating => true %>

<h3>Beauty:</h3>
<p>
  Global Avg: <%= ratings_for @car, :dimension => :beauty, :size => 'medium' %>
</p>
Your rating: <%= ratings_for @car, :force_static => true, :dimension => :beauty, :size => 'small', :show_user_rating => true %>

<h3>Price:</h3>
<p>
  Global Avg: <%= ratings_for @car, :dimension => :price, :size => 'medium' %>
</p>
Your rating: <%= ratings_for @car, :force_static => true, :dimension => :price, :size => 'small', :show_user_rating => true %>


<h3>Raters (speed)</h3>

<% for rater in @car.raters(:speed) %>
  <%= rater.username %>:
  <%= ratings_for @car, rater, :dimension => :speed, :show_user_rating => true %>
<% end %>

<p>
  <%= link_to "Edit", edit_car_path(@car) %> |
  <%= link_to "Destroy", @car, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", cars_path %>
</p>
