<% title "Users" %>

<table>
  <tr>
    <th>Username</th>
    <th>Behavior</th>
    <th></th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%=h user.username %></td>
      <td><%= ratings_for user, :static, :size => 'small', :dimension => :behavior %></td>
      <td><%= link_to "Show", user %></td>
    </tr>
  <% end %>
</table>